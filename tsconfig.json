{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./global.d.ts"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["src", "env.d.ts"],
  "exclude": ["node_modules"]
}
